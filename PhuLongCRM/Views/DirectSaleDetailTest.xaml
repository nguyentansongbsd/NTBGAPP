            </Grid>
            <controls:CenterPopup x:Name="PopupUnit" Title="{x:Static lang:Language.thong_tin_san_pham_title}"/>
            <controls:PopupHover x:Name="PopupHover" />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>