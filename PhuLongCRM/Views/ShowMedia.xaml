<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Video"
             xmlns:xct="clr-namespace:Xamarin.CommunityToolkit.UI.Views;assembly=Xamarin.CommunityToolkit"
             x:Class="PhuLongCRM.Views.ShowMedia"
             BackgroundColor="#444444">
    <ContentPage.Content>
        <AbsoluteLayout>
            <xct:MediaElement x:Name="videoView" MediaOpened="videoView_MediaOpened" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" AutoPlay="True" BackgroundColor="#dddddd" Aspect="AspectFit" />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>